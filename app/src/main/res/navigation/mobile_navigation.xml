<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mlretrocomputacion.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_navigation_home_to_classicFragment"
            app:destination="@id/classicFragment" />
        <action
            android:id="@+id/action_navigation_home_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.mlretrocomputacion.ui.detail.DetailFragment"
        android:label="detalles"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="idUser"
            app:argType="integer" />
        <argument
            android:name="idItem"
            app:argType="string" />
        <action
            android:id="@+id/action_detailsFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/classicFragment"
        android:name="com.example.mlretrocomputacion.ui.classic.ClassicFragment"
        android:label="clasicos"
        tools:layout="@layout/fragment_classic" >
        <argument
            android:name="consola"
            app:argType="string" />
        <action
            android:id="@+id/action_classicFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.mlretrocomputacion.ui.webview.WebViewFragment"
        android:label="navega en ml"
        tools:layout="@layout/fragment_web_view" >
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.mlretrocomputacion.ui.favorite.FavoriteFragment"
        android:label="favoritos"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_detailsFragment2"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>